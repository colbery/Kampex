<% layout('layouts/boilerplate.ejs') %>

<div class="row w-100">
  <h1 class="text-center">Nowy Kampex</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/kampex"
      method="POST"
      novalidate
      class="validateForm"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Tytul</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="kampex[title]"
          required
        />
        <div class="valid-feedback">👍</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Lokalizacja</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="kampex[location]"
          required
        />
        <div class="valid-feedback">👍</div>
      </div>
      <!--
      <div class="mb-3">
        
        <input
          class="form-control"
          type="text"
          id="image"
          name="kampex[image]"
          required
        />
        <div class="valid-feedback">👍</div>
      </div>
      -->
      <div class="mb-3">
        <label class="form-label" for="image">Zdjecia</label><br />
        <input type="file" name="image" id="" multiple />
        <div class="valid-feedback">👍</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="image1">Spacer Capture</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="kampex[image1]"
          placeholder="https://my.matterport.com/show/?m=mNGCQyh96Ke&play=1"
        />
        <div class="valid-feedback">👍</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Cena Kampex</label>

        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="price-label">ZL</span>
          </div>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="kampex[price]"
            required
          />
          <div class="valid-feedback">👍</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Opis</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="kampex[description]"
          required
        ></textarea>
        <div class="valid-feedback">👍</div>
      </div>

      <div class="mb-3">
        <button class="btn btn-success">Dodaj Kampex</button>
      </div>
    </form>
    <a href="/kampex">Powrot</a>
  </div>
</div>
